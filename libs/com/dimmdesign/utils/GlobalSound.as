package com.dimmdesign.utils {		import com.greensock.TweenMax;		import flash.media.SoundMixer;	import flash.media.SoundTransform;	
	/**	 * 	 * @author Dimitris Chatzieleftheriou	 * @version 1.0	 * Controls the global sound of the application.	 * The class is dependent on TweenMax by Greensock (http://www.greensock.com).	 * 	 */		public class GlobalSound {				private static var _volume:Number = 1;				public static function set volume ($newVolume:Number):void {						GlobalSound._volume = $newVolume;			SoundMixer.soundTransform = new SoundTransform (GlobalSound._volume);					}				public static function get volume ():Number {						return GlobalSound._volume;					}				public static function fadeIn ($volume:Number = 1, $duration:Number = 0.65):void {					TweenMax.to(GlobalSound, $duration, {volume:$volume, transition:"linear"});					}				public static function fadeOut ($duration:Number = 0.65):void {						TweenMax.to(GlobalSound, $duration, {volume:0, transition:"linear"});					}			}	}